<?php
// admin/pages/products.php - –°–ò–°–¢–ï–ú–ê –£–ü–†–ê–í–õ–ï–ù–ò–Ø –¢–û–í–ê–†–ê–ú–ò –° –ò–°–ü–†–ê–í–õ–ï–ù–ù–´–ú –ê–õ–ò–ê–°–û–ú

// üîó –ò–°–ü–†–ê–í–õ–ï–ù–ù–´–ô –ê–õ–ò–ê–° –î–õ–Ø –†–ï–î–ê–ö–¢–û–†–ê –¢–û–í–ê–†–û–í - –î–û–õ–ñ–ï–ù –ë–´–¢–¨ –ü–ï–†–í–´–ú!
if (isset($_GET['page']) && $_GET['page'] === 'product_editor') {
    // –ò—â–µ–º —Ñ–∞–π–ª —Ä–µ–¥–∞–∫—Ç–æ—Ä–∞ –≤ —Ä–∞–∑–Ω—ã—Ö –≤–æ–∑–º–æ–∂–Ω—ã—Ö –º–µ—Å—Ç–∞—Ö
    $possible_paths = [
        __DIR__ . '/product_editor.php',
        __DIR__ . '/order_success.php', 
        dirname(__DIR__) . '/product_editor.php',
        dirname(__DIR__) . '/order_success.php',
        './product_editor.php',
        './order_success.php'
    ];

    $editor_file = null;
    foreach ($possible_paths as $path) {
        if (file_exists($path)) {
            $editor_file = $path;
            break;
        }
    }

    if ($editor_file) {
        // –ü–µ—Ä–µ–¥–∞–µ–º ID —Ç–æ–≤–∞—Ä–∞ –¥–ª—è —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
        if (isset($_GET['id'])) {
            $_REQUEST['product_id'] = $_GET['id'];
            $_GET['product_id'] = $_GET['id']; // –î—É–±–ª–∏—Ä—É–µ–º –¥–ª—è —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏
        }

        // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ñ–ª–∞–≥–∏ –¥–ª—è —Ä–µ–¥–∞–∫—Ç–æ—Ä–∞
        $_REQUEST['editor_mode'] = true;
        $_REQUEST['from_products'] = true;
        $_REQUEST['no_redirect'] = true;

        // –õ–æ–≥–∏—Ä—É–µ–º –¥–ª—è –æ—Ç–ª–∞–¥–∫–∏
        error_log('üîó –ê–ª–∏–∞—Å –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω: ' . $editor_file);
        error_log('üîó –ü–∞—Ä–∞–º–µ—Ç—Ä—ã: ' . http_build_query($_GET));
        error_log('üîó ID —Ç–æ–≤–∞—Ä–∞: ' . ($_GET['id'] ?? '–Ω–æ–≤—ã–π —Ç–æ–≤–∞—Ä'));

        // –ü–æ–¥–∫–ª—é—á–∞–µ–º —Ä–µ–¥–∞–∫—Ç–æ—Ä
        include $editor_file;
        exit; // –í–∞–∂–Ω–æ - –æ—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –≤—ã–ø–æ–ª–Ω–µ–Ω–∏–µ products.php
    } else {
        echo '<div class="alert alert-danger animate-fade-in">
            <h5><i class="fas fa-exclamation-triangle me-2"></i>üîó –û—à–∏–±–∫–∞ –∞–ª–∏–∞—Å–∞</h5>
            <p><strong>–§–∞–π–ª —Ä–µ–¥–∞–∫—Ç–æ—Ä–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω!</strong></p>
            <p>–ü—Ä–æ–≤–µ—Ä–µ–Ω–Ω—ã–µ –ø—É—Ç–∏:</p>
            <ul>';
        foreach ($possible_paths as $path) {
            echo '<li><code>' . htmlspecialchars($path) . '</code> - ' . (file_exists($path) ? '‚úÖ' : '‚ùå') . '</li>';
        }
        echo '</ul></div>';
    }
}

// –ü–æ–¥–∫–ª—é—á–∞–µ–º —Ñ—É–Ω–∫—Ü–∏–∏ - –µ—Å–ª–∏ –Ω–µ—Ç, —Å–æ–∑–¥–∞–µ–º –±–∞–∑–æ–≤—ã–µ
if (!function_exists('getAllProducts')) {
    // –ë–∞–∑–æ–≤—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å —Ç–æ–≤–∞—Ä–∞–º–∏
