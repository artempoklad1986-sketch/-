    function getCategories() {
        return [
            ['id' => 1, 'name' => '–†–∞—Å—Ç–µ–Ω–∏—è'],
            ['id' => 2, 'name' => '–†—ã–±–∫–∏'],
            ['id' => 3, 'name' => '–û–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏–µ'],
            ['id' => 4, 'name' => '–î–µ–∫–æ—Ä'],
            ['id' => 5, 'name' => '–ö–æ—Ä–º–∞'],
            ['id' => 6, 'name' => '–•–∏–º–∏—è –¥–ª—è –≤–æ–¥—ã']
        ];
    }

    function getCategoryById($id) {
        $categories = getCategories();
        foreach ($categories as $category) {
            if ($category['id'] == $id) {
                return $category;
            }
        }
        return null;
    }

    function getProductById($id) {
        $products = getAllProducts();
        foreach ($products as $product) {
            if ($product['id'] == $id) {
                return $product;
            }
        }
        return null;
    }

    function deleteProduct($id) {
        // –í —Ä–µ–∞–ª—å–Ω–æ–º –ø—Ä–æ–µ–∫—Ç–µ –∑–¥–µ—Å—å —É–¥–∞–ª–µ–Ω–∏–µ –∏–∑ –ë–î
        error_log("–£–¥–∞–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞ ID: $id");
        return ['success' => true];
    }

    function copyProduct($id) {
        // –í —Ä–µ–∞–ª—å–Ω–æ–º –ø—Ä–æ–µ–∫—Ç–µ –∑–¥–µ—Å—å —Å–æ–∑–¥–∞–Ω–∏–µ –∫–æ–ø–∏–∏ –≤ –ë–î
        $newId = rand(1000, 9999);
        error_log("–ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞ ID: $id -> –Ω–æ–≤—ã–π ID: $newId");
        return ['success' => true, 'product_id' => $newId];
    }

    function saveProduct($product) {
        // –í —Ä–µ–∞–ª—å–Ω–æ–º –ø—Ä–æ–µ–∫—Ç–µ –∑–¥–µ—Å—å —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –≤ –ë–î
        error_log("–°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞: " . json_encode($product));
        return ['success' => true, 'product_id' => $product['id'] ?? rand(1000, 9999)];
    }

    function formatPrice($price) {
        return number_format(floatval($price), 0, ',', ' ') . ' ‚ÇΩ';
    }
}

// –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ —Ñ—É–Ω–∫—Ü–∏–∏ –∑–∞–≥—Ä—É–∂–µ–Ω—ã
if (!function_exists('getAllProducts')) {
    die('–û—à–∏–±–∫–∞: –ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å —Ñ—É–Ω–∫—Ü–∏–∏ –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å —Ç–æ–≤–∞—Ä–∞–º–∏');
}

// –û–±—Ä–∞–±–æ—Ç–∫–∞ POST-–∑–∞–ø—Ä–æ—Å–æ–≤ (—Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ, —É–¥–∞–ª–µ–Ω–∏–µ, –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ)
if ($_SERVER['REQUEST_METHOD'] === 'POST') {

    // –û–±—Ä–∞–±–æ—Ç–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–∞
    if (isset($_POST['delete_product']) && isset($_POST['product_id'])) {
        $result = deleteProduct($_POST['product_id']);
        if ($result['success']) {
            echo '<div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i>–¢–æ–≤–∞—Ä —É—Å–ø–µ—à–Ω–æ —É–¥–∞–ª–µ–Ω!
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>';
        } else {
            echo '<div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-2"></i>–û—à–∏–±–∫–∞: ' . htmlspecialchars($result['error']) . '
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>';
        }
    }

    // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è —Ç–æ–≤–∞—Ä–∞
    if (isset($_POST['copy_product']) && isset($_POST['product_id'])) {
        $result = copyProduct($_POST['product_id']);
        if ($result['success']) {
            echo '<div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-copy me-2"></i>–¢–æ–≤–∞—Ä —É—Å–ø–µ—à–Ω–æ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω! ID: ' . $result['product_id'] . '
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>';
        } else {
            echo '<div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-2"></i>–û—à–∏–±–∫–∞ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è: ' . htmlspecialchars($result['error']) . '
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>';
        }
    }

    // –û–±—Ä–∞–±–æ—Ç–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–∞ –∏–∑ —Ä–µ–¥–∞–∫—Ç–æ—Ä–∞
    if (isset($_POST['save_product'])) {
        $productData = [
            'id' => $_POST['product_id'] ?? null,
            'name' => $_POST['name'] ?? '',
            'latin_name' => $_POST['latin_name'] ?? '',
            'description' => $_POST['description'] ?? '',
            'short_description' => $_POST['short_description'] ?? '',
            'price' => floatval($_POST['price'] ?? 0),
            'old_price' => floatval($_POST['old_price'] ?? 0),
            'category_id' => intval($_POST['category_id'] ?? 0),
            'sku' => $_POST['sku'] ?? '',
            'stock_quantity' => intval($_POST['stock_quantity'] ?? 0),
            'status' => intval($_POST['status'] ?? 1),
            'main_image' => $_POST['main_image'] ?? '',
            'gallery' => json_decode($_POST['gallery'] ?? '[]', true),
            'badges' => json_decode($_POST['badges'] ?? '[]', true),
            'tags' => $_POST['tags'] ?? '',
            'size' => $_POST['size'] ?? '',
            'temperature' => $_POST['temperature'] ?? '',
            'ph_level' => $_POST['ph_level'] ?? '',
            'lighting' => $_POST['lighting'] ?? '',
            'difficulty' => $_POST['difficulty'] ?? '',
            'meta_title' => $_POST['meta_title'] ?? '',
            'meta_description' => $_POST['meta_description'] ?? ''
        ];

        $result = saveProduct($productData);
        if ($result['success']) {
            echo '<div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-save me-2"></i>–¢–æ–≤–∞—Ä —É—Å–ø–µ—à–Ω–æ —Å–æ—Ö—Ä–∞–Ω–µ–Ω! ID: ' . $result['product_id'] . '
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>';

            // –†–µ–¥–∏—Ä–µ–∫—Ç –æ–±—Ä–∞—Ç–Ω–æ –∫ —Å–ø–∏—Å–∫—É —Ç–æ–≤–∞—Ä–æ–≤
            echo '<script>
                setTimeout(function() {
                    window.location.href = "?page=products";
                }, 2000);
            </script>';
        } else {
            echo '<div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-2"></i>–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è: ' . htmlspecialchars($result['error'] ?? '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –æ—à–∏–±–∫–∞') . '
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>';
        }
    }

    // –û–±—Ä–∞–±–æ—Ç–∫–∞ –º–∞—Å—Å–æ–≤—ã—Ö –¥–µ–π—Å—Ç–≤–∏–π
    if (isset($_POST['bulk_action']) && !empty($_POST['selected_products'])) {
        $action = $_POST['bulk_action'];
        $productIds = $_POST['selected_products'];
        $results = [];

        switch ($action) {
            case 'delete':
                foreach ($productIds as $id) {
                    $results[] = deleteProduct($id);
                }
                break;
            case 'activate':
                foreach ($productIds as $id) {
                    $product = getProductById($id);
                    if ($product) {
                        $product['status'] = 1;
                        $results[] = saveProduct($product);
                    }
                }
                break;
            case 'deactivate':
                foreach ($productIds as $id) {
                    $product = getProductById($id);
                    if ($product) {
                        $product['status'] = 0;
                        $results[] = saveProduct($product);
                    }
                }
                break;
        }

        $successCount = count(array_filter($results, function($r) { return $r['success']; }));
        echo '<div class="alert alert-info alert-dismissible fade show">
            <i class="fas fa-info-circle me-2"></i>–û–±—Ä–∞–±–æ—Ç–∞–Ω–æ —Ç–æ–≤–∞—Ä–æ–≤: ' . $successCount . ' –∏–∑ ' . count($productIds) . '
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>';
    }
}

// –ü–æ–ª—É—á–µ–Ω–∏–µ –¥–∞–Ω–Ω—ã—Ö –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è
$products = getAllProducts();
$categories = getCategories();
$search = $_GET['search'] ?? '';
$category_filter = $_GET['category'] ?? '';
$status_filter = $_GET['status'] ?? '';
$sort_by = $_GET['sort'] ?? 'name_asc';

// –§–∏–ª—å—Ç—Ä–∞—Ü–∏—è —Ç–æ–≤–∞—Ä–æ–≤
if ($search || $category_filter || $status_filter !== '') {
    $filtered_products = [];
    foreach ($products as $product) {
        $match = true;

        // –§–∏–ª—å—Ç—Ä –ø–æ –ø–æ–∏—Å–∫—É
        if ($search) {
            $searchLower = mb_strtolower($search);
            $nameMatch = mb_strpos(mb_strtolower($product['name']), $searchLower) !== false;
            $descMatch = mb_strpos(mb_strtolower($product['description'] ?? ''), $searchLower) !== false;
            $tagsMatch = mb_strpos(mb_strtolower($product['tags'] ?? ''), $searchLower) !== false;
            $skuMatch = mb_strpos(mb_strtolower($product['sku'] ?? ''), $searchLower) !== false;

            if (!($nameMatch || $descMatch || $tagsMatch || $skuMatch)) {
                $match = false;
            }
        }

        // –§–∏–ª—å—Ç—Ä –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏
        if ($category_filter && $product['category_id'] != $category_filter) {
            $match = false;
        }

        // –§–∏–ª—å—Ç—Ä –ø–æ —Å—Ç–∞—Ç—É—Å—É
        if ($status_filter !== '' && ($product['status'] ?? 1) != $status_filter) {
            $match = false;
        }

        if ($match) {
            $filtered_products[] = $product;
        }
    }
    $products = $filtered_products;
}

// –°–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ —Ç–æ–≤–∞—Ä–æ–≤
usort($products, function($a, $b) use ($sort_by) {
    switch ($sort_by) {
        case 'name_desc':
            return strcasecmp($b['name'], $a['name']);
        case 'price_asc':
            return ($a['price'] ?? 0) <=> ($b['price'] ?? 0);
        case 'price_desc':
            return ($b['price'] ?? 0) <=> ($a['price'] ?? 0);
        case 'date_desc':
            return strcmp($b['created_at'] ?? '', $a['created_at'] ?? '');
        case 'date_asc':
            return strcmp($a['created_at'] ?? '', $b['created_at'] ?? '');
        default: // name_asc
            return strcasecmp($a['name'], $b['name']);
    }
});

// –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞
$allProducts = getAllProducts();
$totalProducts = count($allProducts);
$activeProducts = count(array_filter($allProducts, function($p) { return ($p['status'] ?? 1) == 1; }));
$inactiveProducts = $totalProducts - $activeProducts;
$totalValue = array_sum(array_map(function($p) { return ($p['price'] ?? 0) * ($p['stock_quantity'] ?? 0); }, $allProducts));

